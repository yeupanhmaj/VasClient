<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

        <TextView
            android:id="@+id/tvNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:scaleType="fitCenter"
            android:textSize="35sp"/>
        <TextView
            android:id="@+id/tvNumberCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90C-98383"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@id/tvNum"
            android:layout_centerHorizontal="true"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/namePort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNumberCar"
            android:layout_toRightOf="@id/tvNum"
            android:text="Cổng vào : "
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tvNumPort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Số Port"
            android:textSize="20sp"
            android:layout_toEndOf="@id/namePort"
            android:paddingStart="10dp"
            android:layout_below="@+id/tvNumberCar"/>
</RelativeLayout>